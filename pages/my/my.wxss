.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img{
    width: 100%;
    height: 574rpx;
}

.about-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 100rpx;
    width: 550rpx;
    position: absolute;
    top: 440rpx;
}

.about-us{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.about-us image{
    width: 35rpx;
    height: 35rpx;
    margin-bottom: 20rpx;
}

.description{
    font-size:24rpx;
    color:#999999;
}

.about-container > view:nth-child(2){
    margin-top: -5rpx;
}

.avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;       /*注意这里要设置，不然我无法把图片显示成圆形*/
}

.avatar-position{
    position:absolute;
    top:250rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nickname{
    position: relative;
    top: 10rpx;
}

.study{
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 50rpx;
    right: 40rpx;
}

.book-count{
    font-size:36rpx;
    color:#000000;
}

.like-container{
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100%;
    justify-content: center;
    align-items: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.headline{
    margin-top:30rpx;
    width:97rpx;
    height:42rpx;
}

.preview-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 690rpx;
}



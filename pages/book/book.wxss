.container{
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
}

.header{
    width: 100%;
    height: 100rpx;
    position: fixed;    /*滑动的时候header始终保持不动*/
    background-color: white;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;    /*防止页面覆盖头部*/
}

.box image{
    height: 30rpx;
    width: 30rpx;
    margin-right: 20rpx;
}

.head-img{
    width: 100rpx;
    height: 32rpx;
    margin-top: 40rpx;
}

.box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    width: 700rpx;
    height: 68rpx;
    color: #999999;
}


.sub-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
    width: 100%;
}

.books_container{
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;        /*flex换行，尽可能多的容纳元素，然后自动换行*/
    justify-content: space-between;
    padding: 0 90rpx 0 90rpx;   /*内边距，上右下左*/
}

.books_container v-book{
    margin-top: 10rpx;
}

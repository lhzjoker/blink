.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: fixed;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    background-color: white;
    z-index: 999;
}

.search-container{
    width: 600rpx;
    height: 70rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    color: #999999;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.icon{
    width: 30rpx;
    height: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.cancel-img{
    width: 30rpx;
    height: 30rpx;
    margin-left: 130rpx;
}

.Cancel{
    margin-left: 30rpx;
}

.history{
    display: flex;
    flex-direction: column;
    margin: 200rpx 0 20rpx 0;
    font-size: 28rpx;
    width: 690rpx;
}

.hot-search{
    margin-top: 70rpx;
}

.title{
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.chunk{
    display: inline-block;
    background-color: black;
    height: 36rpx;
    width: 10rpx;
    margin-right: 20rpx;
}

.tags-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 24rpx;
    padding-left: 15px;
    width: 630rpx;
}

.tags-container v-tag{
    margin-bottom: 10rpx;
    margin-right: 15rpx;
}

.books-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 100rpx;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
    width: 570rpx;
}

.bar{
    color: black;
}

.loading-center{
    position: absolute;
    top: 50%;
    left: 50%;
}

.loading{
    margin: 50rpx 0 50rpx 0;
}

.empty-tip {
    display: inline-block;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
}